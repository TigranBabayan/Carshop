@model CarShop.ViewModels.LoginModel;
@{
    ViewData["Title"] = "Login";
}


<a asp-action="Register" asp-controller="Account">Գրանցվել</a>

<form asp-action="Login" asp-controller="Admin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="col-lg-3 col-md-3">
        <div class="form-group">
            <label asp-for="Email">Մուտքագրեք Email</label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Մուտքագրեք Գաղտնաբառը</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Մուտք" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
