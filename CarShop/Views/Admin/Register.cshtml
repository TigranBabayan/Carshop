@model CarShop.ViewModels.RegisterModel;
@{
    ViewData["Title"] = "Register";
}
<h2>Գրանցվել</h2>

<form asp-action="Register" asp-controller="Admin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="col-lg-3 col-md-3">
        <div class="form-group">
            <label asp-for="Email">Մուտքագրեք Email</label><br />
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Մուտքագրեք Գաղտնաբառը</label><br />
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Կրկնեք Գաղտնաբառը</label><br />
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Գրանցվում" />
        </div>
    </div>
</form>