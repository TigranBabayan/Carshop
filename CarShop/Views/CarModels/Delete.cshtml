<div class=" row">

    @foreach (var splitedImageName in SplitImageName(Model.CarModelImage))
    {
        if (splitedImageName.Length > 0)
        {
            <div class="col-lg-4 pb-3">
                <img src="~/images/@splitedImageName"
                     class="float-left"
                     height="200"
                     asp-append-version="true" />
            </div>
        }
    }

</div>


@{
    List<string> SplitImageName(string ProfilePicture)
    {
        List<string> imageName = new List<string>();

     
            string[] splitedImageName = ProfilePicture.Split('<');
            foreach (var imgName in splitedImageName)
            {
                imageName.Add(imgName);
            }
        return imageName;

    }}